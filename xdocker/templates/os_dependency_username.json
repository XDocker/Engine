{
  "cloudProvider" : "Amazon AWS",
  "OS" :
		{
		 "Amazon Linux" : {
		 					"username" : "ec2-user",
		 					"dependencies" : 
		 					[
		 					"yum update -y",
        						"yum -y install docker"
		 					]
		 				  },
		 "CentOS 6.5" : {
		 					"username" : "root",
		 					"dependencies" : 
		 					[
		 					"yum -y install epel-release.noarch",
        						"yum update -y",
        						"yum -y install docker-io",
        						"chkconfig docker on",
							"service docker start"
		 					]
		        	  },
		 "Ubuntu 14.04" :
		 			 {
		 					"username" : "ubuntu",
		 					"dependencies" : 
		 					[
		 					"aptitude -q -y --allow-new-installs --safe-resolver update",
				        		"aptitude -q -y --allow-new-installs --safe-resolver install docker.io", 
				    			"ln -sf /usr/bin/docker.io /usr/local/bin/docker",
				    			"echo -e 'DOCKER_OPTS=\"-H tcp://0.0.0.0:4243 -H unix:///var/run/docker.sock\"'>>/etc/default/docker.io",
				    			"service docker.io restart"
		 					]
		        	 }
		 }
}
 	
